{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "allowJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "js-dist",
    "baseUrl": "./",
    "paths": {
      "lib/*": ["ui/lib/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "js-dist"]
}
